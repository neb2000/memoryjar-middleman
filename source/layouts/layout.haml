%html
  %head
    %meta{charset: "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta(name='viewport'    content='width=device-width, initial-scale=1.0, user-scalable=no')
    %meta(name='apple-mobile-web-app-capable' content='yes')
    %meta(name='description' content='Memory Jar - Photography and web development ')
    %meta(name='keywords'    content='Azuresong, Memory jar, Photography, Web development')
    %meta(name='language'    content='English')
    %meta(name='author'      content='Shuo Chen')
    %meta(name='copyright'   content="#{Date.today.year} Shuo Chen")
    
    %title Memory Jar - Photography and web development
    
    = favicon_tag 'images/favicon.ico'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Raleway:100,300|Lato:100,300'
    = stylesheet_link_tag "all"
    = javascript_include_tag  "all", async: true
    
  %body{ class: page_classes }
    = yield
    = google_analytics_tag